@model LoginAndRegViewModel;
<div class="container">
    <div class="row">
        <div class="col">
            <h2>Register</h2>
            <form asp-action="Register" asp-controller="Home" method="POST">           
           <span asp-validation-for="NewUser.FirstName"></span>
            First Name<input class="form-control" asp-for="NewUser.FirstName">
            <span asp-validation-for="NewUser.LastName"></span>
             Last Name<input class="form-control" asp-for="NewUser.LastName">
              <span asp-validation-for="NewUser.Email"></span>
                Email<input class="form-control" asp-for="NewUser.Email">
                <span asp-validation-for="NewUser.Password"></span>
                Password<input class="form-control" asp-for="NewUser.Password">
                <span asp-validation-for="NewUser.Confirm"></span>
                Password Confirmation<input class="form-control" asp-for="NewUser.Confirm">
                <button style="margin-top: 20px;" class="btn btn-success" type="submit">Sign Up Now</button>                
               
            </form>
        </div>
        <div class="col">
            <h2>Login</h2>
            <form asp-action="Login" asp-controller="Home" method="POST">
                <span asp-validation-for="LoggedUser.Email"></span>
                Email<input class="form-control" asp-for="LoggedUser.Email">
                 <span asp-validation-for="LoggedUser.Password"></span>
                 Password<input class="form-control" asp-for="LoggedUser.Password">
               <button style="margin-top: 20px;" class="btn btn-primary">Login</button>  
            </form>
        </div>
    </div>
</div>